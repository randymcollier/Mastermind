<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    tools:context=".MainActivity" >
    
    <TextView
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:drawableBottom="@drawable/download3"
         android:layout_centerHorizontal="true"
         android:layout_marginTop="10dp" />
    
    

    <Button
        android:id="@+id/highscores"
        android:tag="Highscores"
        android:layout_width="115dp"
        android:layout_height="75dp"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_centerHorizontal="true"
        android:onClick="onClick"
        android:background="@drawable/buttonborder"
	    android:textColor="#00FF00"
	    android:paddingLeft="5dp"
	    android:paddingRight="5dp"
	    android:textSize="25sp"
        android:text="Scores" />

    <Button
        android:id="@+id/easy"
        android:tag="Easy"
        android:layout_width="115dp"
        android:layout_height="75dp"
        android:layout_above="@id/highscores"
        android:layout_toLeftOf="@+id/medium"
        android:layout_marginRight="5dp"
        android:onClick="onClick"
        android:background="@drawable/buttonborder"
	    android:textColor="#00FF00"
	    android:paddingLeft="5dp"
	    android:paddingRight="5dp"
	    android:textSize="25sp"
        android:text="Easy" />

    <Button
        android:id="@+id/medium"
        android:tag="Medium"
        android:layout_width="115dp"
        android:layout_height="75dp"
        android:layout_alignBaseline="@id/easy"
        android:layout_alignBottom="@id/easy"
        android:layout_centerHorizontal="true"
        android:onClick="onClick"
        android:background="@drawable/buttonborder"
	    android:textColor="#00FF00"
	    android:paddingLeft="5dp"
	    android:paddingRight="5dp"
	    android:textSize="25sp"
        android:text="Medium" />

    <Button
        android:id="@+id/hard"
        android:tag="Hard"
       	android:layout_width="115dp"
        android:layout_height="75dp"
        android:layout_toRightOf="@+id/medium"
        android:layout_alignBaseline="@id/medium"
        android:layout_alignBottom="@id/medium"
        android:layout_marginLeft="5dp"
        android:onClick="onClick"
        android:background="@drawable/buttonborder"
	    android:textColor="#00FF00"
	    android:paddingLeft="5dp"
	    android:paddingRight="5dp"
	    android:textSize="25sp"
        android:text="Hard" />

</RelativeLayout>